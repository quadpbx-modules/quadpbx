{
    // I recommend to disable VS Code's built-in PHP IntelliSense by setting php.suggest.basic to false to avoid duplicate suggestions.
    "php.suggest.basic": false,
    "editor.formatOnSave": true,
    "[php]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.colorCustomizations": {},
    "todo-tree.highlights.enabled": false,
    "i18n-ally.localesPaths": ["app/resources/lang"],
    "psalm.configPaths": ["app/psalm.xml"],
    "psalm.psalmScriptPath": "app/vendor/bin/psalm-language-server",
    "phpCodeSniffer.exec.linux": "app/vendor/bin/phpcs",
    "phpCodeSniffer.standard": "Custom",
    "phpCodeSniffer.standardCustom": "app/phpcs.xml",
    "psalm.psalmScriptArgs": [
        "--on-change-debounce-ms=500",
        "--show-diagnostic-warnings=false"
    ],
    "intelephense.environment.phpVersion": "8.2.0",
    "psalm.enableVerbose": false,
    "psalm.trace.server": "off",
    "psalm.logLevel": "INFO",
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    "coverage-gutters.coverageBaseDir": "app/output/**",
    "coverage-gutters.remotePathResolve": ["/app/", "./"],
    "php.validate.enable": false,
    "php.problems.excludeGitIgnore": true,
    "php.format.codeStyle": "Off",
    "php.format.rules.forStatementWrap": "off",
    "php.format.rules.whileStatementNewLineAfterLeftParen": false,
    "php.problems.exclude": {
        "/": true
    },
    "php.problems.scope": "none",
    "conventionalCommits.emojiFormat": "emoji",
    "conventionalCommits.scopes": [],
    "gitlens.autolinks": [
        {
            "prefix": "TRUNK-",
            "url": "https://issues.clearlyip.com/browse/TRUNK-<num>"
        }
    ],
    "files.watcherExclude": {
        "data/**": true
    },
    "files.exclude": {
        "**/node_modules": true
    },
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    "coverage-gutters.coverageBaseDir": "app/output/**",
    "coverage-gutters.remotePathResolve": ["/app/", "./"]
}
